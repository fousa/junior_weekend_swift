{{% handler:FormHandler }}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<!-- Title -->
		<title>Juniorenweekend 2016</title>

		<!-- Stylesheets -->
		<link href="bootstrap.min.css" rel="stylesheet">
		<link href="font-awesome.min.css" rel="stylesheet">
		<link href="simple-line-icons.css" rel="stylesheet">
		<link href="animate.min.css" rel="stylesheet">
		<link href="style.css" rel="stylesheet">

		<!-- Fonts -->
		<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,300' rel='stylesheet' type='text/css'>

		<!-- HTML5 Support -->
		<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body class="slider-background">
		<!-- Preloader -->
		<div id="preloader">
			<div id="status">&nbsp;</div>
		</div>

		<!-- pattern -->
		<div id="bg_pattern"></div>

		<!-- contact -->
		<section id="contact" class="section wow fadeInUp">
			<div class="container">

				<div class="section-heading">
					<h2>Inschrijven</h2>
					<div class="separator"></div>
				</div>

				<div class="row">
					<div class="col-md-8 col-md-offset-2">

						<!-- Working Contact Form -->
						<form method="POST" novalidate id="register">
							<div class="row">
								<div class="control-group form-group col-sm-6">
									<div class="controls">
										<label>Naam</label>
										<input type="text" class="form-control dark" id="name" placeholder="" required data-validation-required-message="Please enter your name.">
										<p class="help-block"></p>
									</div>
								</div>
								<div class="control-group form-group col-sm-6">
									<div class="controls">
										<label>Email</label>
										<input type="email" class="form-control dark" id="email" placeholder="" required data-validation-required-message="Please enter your email address.">
										<p class="help-block"></p>
									</div>
								</div>
							</div>
							<div id="success"></div>

							<div class="padd-tb-10">
								<button type="submit" class="btn btn-success btn-lg btn-block">Inschrijven</button>
							</div>

						</form>
						<div class="clearfix"></div>

						<!-- Contact infor -->
						<div class="row" style="margin-top: 4em">
							<div class="col-md-4 col-sm-4">
								<div class="contact-info">
									<i class="fa fa-map-marker"></i> EBBT, Brasschaat
								</div>
							</div>
							<div class="col-md-4 col-sm-4">
								<div class="contact-info">
									<i class="fa fa-envelope-o"></i> info@bzc.be
								</div>
							</div>
							<div class="col-md-4 col-sm-4">
								<div class="contact-info">
									<i class="fa fa-phone"></i> (+32) 494 86 03 26
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Javascript -->
		<script src="jquery-1.11.3.min.js"></script>
		<script src="bootstrap.min.js"></script>
		<script src="smooth-scroll.js"></script>
		<script src="backstretch.min.js"></script>
		<script src="wow.min.js"></script>
		<script src="jqBootstrapValidation.js"></script>
		<script src="main.js"></script>
	</body>
</html>
